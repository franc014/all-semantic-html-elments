---
export interface Props {
  description: string;
  doclink: string;
  element: string;
}

const { element, description, doclink } = Astro.props;
---

<li class="border-b border-dashed border-pink-300 pb-6 mb-8">
  <h2>
    <a class="text-indigo-800 text-4xl hover:text-indigo-500" href={doclink}
      >{element}</a
    >
  </h2>
  <p class="text-gray-700 mb-4">{description}</p>
  <h3 class="text-indigo-700 text-2xl mb-2 tracking-wide">Accessibility</h3>
  <div class="text-gray-600">
    <slot />
  </div>
</li>

