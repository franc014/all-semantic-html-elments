---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Icon buttons, Accessible Names">
  <main>
    <h1 class="mb-8">Providing accNames to icon buttons</h1>
    <button class="icon-button">
      <svg height="21" viewBox="0 0 21 21" width="21" aria-hidden="true"
        ><g
          fill="none"
          fill-rule="evenodd"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          transform="translate(2 3)"
          ><path
            d="m11.6427217 13.7567397-3.14377399-1.2567396h-4v-7.00000002h2l2.80105246-5.5c.57989907 0 1.07487363.2050252 1.48492373.61507546.4100508.41005058.6150761.90502516.6150755 1.48492425l-.8999994 2.40000029 4.0310597 1.34368655c.9979872.33266243 1.5591794 1.37584131 1.3086286 2.37964122l-.0684258.21997226-1.5536355 4.14302809c-.3878403 1.0342407-1.5406646 1.5582517-2.5749053 1.1704115z"
          ></path><path
            d="m1.5 4.5h2c.55228475 0 1 .44771525 1 1v8c0 .5522847-.44771525 1-1 1h-2c-.55228475 0-1-.4477153-1-1v-8c0-.55228475.44771525-1 1-1z"
          ></path>
        </g></svg
      >
      <span class="visually-hidden">Like</span>
    </button>

    <button class="icon-button" aria-labelledby="use-for">
      <svg height="21" viewBox="0 0 21 21" width="21" aria-hidden="true"
        ><g
          fill="none"
          fill-rule="evenodd"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          transform="translate(3 3)"
          ><path
            d="m7 1.5h-4.5c-1.1045695 0-2 .8954305-2 2v9.0003682c0 1.1045695.8954305 2 2 2h10c1.1045695 0 2-.8954305 2-2v-4.5003682"
          ></path><path
            d="m14.5.46667982c.5549155.5734054.5474396 1.48588056-.0167966 2.05011677l-6.9832034 6.98320341-3 1 1-3 6.9874295-7.04563515c.5136195-.5178979 1.3296676-.55351813 1.8848509-.1045243z"
          ></path><path d="m12.5 2.5.953 1"></path></g
        ></svg
      >
      <span hidden id="use-for">Edit</span>
    </button>

    <button class="icon-button" aria-label="download">
      <svg height="21" viewBox="0 0 21 21" width="21"
        ><g
          fill="none"
          fill-rule="evenodd"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          transform="translate(3 3)"
          ><path d="m11.5 8.5-3.978 4-4.022-4"></path><path
            d="m7.522.521v11.979"></path><path
            d="m.5 9v4.5c0 1.1045695.8954305 2 2 2h10c1.1045695 0 2-.8954305 2-2v-4.5"
          ></path></g
        ></svg
      >
    </button>

    <button class="icon-button">
      <svg height="21" viewBox="0 0 21 21" width="21" role="img">
        <title>Send</title>
        <g
          fill="none"
          fill-rule="evenodd"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          transform="translate(3 2)"
        >
          <path d="m15.5.465-8 8.033"></path>
          <path d="m10.5 16.5-3-8.002-7-2.998 15-5z"></path>
        </g>
      </svg>
    </button>

    <button class="icon-button">
      <svg height="21" viewBox="0 0 21 21" width="21" role="image"
        ><g
          fill="none"
          fill-rule="evenodd"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          transform="translate(3 2)"
          ><path
            d="m2.5 2.5h10v12c0 1.1045695-.8954305 2-2 2h-6c-1.1045695 0-2-.8954305-2-2zm5-2c1.0543618 0 1.91816512.81587779 1.99451426 1.85073766l.00548574.14926234h-4c0-1.1045695.8954305-2 2-2z"
          ></path><path d="m.5 2.5h14"></path><path d="m5.5 5.5v8"></path><path
            d="m9.5 5.5v8"></path></g
        ></svg
      >
    </button>
  </main>
</Layout>

<style>
  .icon-button {
    display: inline-flex;
    place-items: center;
    gap: 0.5rem;
    background: none;
    border: none;
    border-radius: 4px;
    margin: 2rem;
    border: 1px solid #ccc;
    padding: 0.5em;
    transition: border-color 0.1s linear;
  }

  .icon-button:hover {
    border-color: #000;
  }

  .icon-button:focus,
  .icon-button:focus-visible {
    outline-color: #666;
    outline-width: 1px;
  }

  .icon-button:active {
    outline: none;
  }

  .icon-button svg {
    color: inherit;
    width: 4.5em;
    height: 4.5em;
  }
</style>
