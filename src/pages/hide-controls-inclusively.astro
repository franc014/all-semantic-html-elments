---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Case Study: Inclusively-hidden custom-styled form controls">
  <main>
    <h1 class="mb-8">
      Case Study: Inclusively-hidden custom-styled form controls
    </h1>
    <label for="c-checkbox" class="c-custom-checkbox">
      <input type="checkbox" id="c-checkbox" />

      <svg width="32" height="32" viewBox="-4 -4 39 39" aria-hidden="true">
        <!-- The background -->
        <rect
          class="checkbox__background"
          width="35"
          height="35"
          x="-2"
          y="-2"
          stroke="currentColor"
          fill="none"
          stroke-width="3"
          rx="6"
          ry="6"></rect>
        <!-- The checkmark-->
        <polyline
          class="checkbox__checkmark"
          points="4,14 12,23 28,5"
          stroke="transparent"
          stroke-width="4"
          fill="none"></polyline>
      </svg>

      <span>Add an accessibility statement</span>
    </label>
  </main>
</Layout>

<style>
  .c-custom-checkbox {
    position: relative;
    display: flex;
    gap: 0.5rem;
  }
  .c-custom-checkbox input[type="checkbox"] {
    position: absolute;
    width: 1em;
    height: 1em;
    opacity: 0;
  }

  /* show focus outline when the checkbox receives keyboard focus */
  .c-custom-checkbox input[type="checkbox"]:focus-visible + svg {
    outline: 2px solid deepPink;
    outline-offset: 4px;
    border-radius: 5px;
    transform: skewX(-5deg);
  }

  .c-custom-checkbox svg * {
    transition: all 0.4s linear;
  }

  .c-custom-checkbox
    input[type="checkbox"]:checked
    + svg
    .checkbox__background {
    fill: rgba(251, 199, 42, 0.631);
    stroke: rgb(146, 59, 217);
  }

  .c-custom-checkbox input[type="checkbox"]:checked + svg .checkbox__checkmark {
    stroke: rgb(146, 59, 217);
  }
  .c-custom-checkbox input[type="checkbox"]:checked + svg path {
    stroke-dashoffset: 1;
    stroke: rgb(146, 59, 217);
  }
</style>

